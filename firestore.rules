
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for articles
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Rules for gallery images
    match /galleryImages/{imageId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Rules for programs
    match /programs/{programId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Rules for settings
    // This allows public read access to any document in the settings collection
    // while restricting write access to authenticated users.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Lock down user data to prevent unauthorized access
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
