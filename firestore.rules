rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fungsi ini memeriksa apakah permintaan datang dari pengguna yang sudah login.
    // Dalam konteks aplikasi ini, pengguna yang login dianggap sebagai admin.
    function isAdmin() {
      return request.auth != null;
    }

    // Aturan untuk koleksi 'articles'
    // Memperbolehkan siapa saja untuk membaca (read).
    // Hanya mengizinkan admin untuk membuat, mengubah, dan menghapus (write).
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Aturan untuk koleksi 'galleryImages'
    // Memperbolehkan siapa saja untuk membaca (read).
    // Hanya mengizinkan admin untuk membuat dan menghapus (create, delete).
    match /galleryImages/{imageId} {
      allow read: if true;
      allow create, delete: if isAdmin();
    }

    // Aturan default yang penting untuk keamanan:
    // Menolak semua akses ke koleksi lain yang tidak didefinisikan secara eksplisit.
    // Ini adalah jaring pengaman untuk mencegah akses yang tidak diinginkan di masa mendatang.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
