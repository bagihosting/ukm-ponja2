rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to collections needed for the public portal
    match /articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /programs/{programId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /galleryImages/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read on SEO settings
    match /settings/seo {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
