rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fungsi bantuan untuk memeriksa apakah pengguna terautentikasi (dianggap sebagai admin)
    function isAdmin() {
      return request.auth != null;
    }

    // Aturan untuk koleksi "articles"
    // Siapa pun dapat membaca artikel.
    // Hanya admin yang dapat membuat, memperbarui, atau menghapus artikel.
    match /articles/{articleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Aturan untuk koleksi "galleryImages"
    // Siapa pun dapat melihat gambar di galeri.
    // Hanya admin yang dapat menambahkan atau menghapus riwayat gambar.
    match /galleryImages/{imageId} {
      allow read: if true;
      allow create, delete: if isAdmin();
    }

    // Aturan default yang sangat penting:
    // Tolak semua akses baca dan tulis ke koleksi lain yang tidak didefinisikan di atas.
    // Ini mencegah akses yang tidak disengaja ke data sensitif di masa depan.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
