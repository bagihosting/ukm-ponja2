rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Secure all collections by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for articles, but only authenticated users can write
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Allow public read for gallery images, but only authenticated users can write
    match /galleryImages/{imageId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Allow public read for programs, but only authenticated users can write
    match /programs/{programId} {
        allow read: if true;
        allow write: if isAuthenticated();
    }

    // Lock down the users collection.
    // It should only be managed by Firebase Authentication and backend logic, not directly by clients.
    match /users/{userId} {
      allow read, write: if false;
    }
  }
}
