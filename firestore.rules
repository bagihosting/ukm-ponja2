rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fungsi ini memeriksa apakah permintaan datang dari pengguna yang sudah login.
    // NOTE: Aturan ini untuk sementara dilonggarkan untuk mengatasi masalah
    //       autentikasi di server-side actions.
    function isAdmin() {
      // return request.auth != null; // Aturan yang ketat
      return true; // Aturan yang dilonggarkan untuk sementara
    }

    // Aturan untuk koleksi 'articles'
    // Memperbolehkan siapa saja untuk membaca (read).
    // Untuk sementara, mengizinkan siapa saja untuk menulis data.
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // Aturan untuk koleksi 'galleryImages'
    // Memperbolehkan siapa saja untuk membaca (read).
    // Untuk sementara, mengizinkan siapa saja untuk menulis data.
    match /galleryImages/{imageId} {
      allow read: if true;
      allow create, delete: if isAdmin();
    }
  }
}
