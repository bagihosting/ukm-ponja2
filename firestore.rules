rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is authenticated (admin)
    function isAdmin() {
      // For this application, we consider any signed-in user as an admin.
      // For more granular control, you might check for a custom claim:
      // return request.auth.token.admin == true;
      return request.auth != null; 
    }

    // Rules for articles collection
    // Allows anyone to read articles, but only admins to create, update, or delete.
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Rules for gallery images collection
    // Allows anyone to read gallery images, but only admins to manage the records.
    match /galleryImages/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Rules for programs collection
    // Allows anyone to read programs, but only admins to create, update, or delete.
    match /programs/{programId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
